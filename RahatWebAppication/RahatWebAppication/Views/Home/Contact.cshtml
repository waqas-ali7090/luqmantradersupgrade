@model RahatWebAppication.ViewModels.ItemViewModel
<div class="log-reg-v3 content-md margin-bottom-30">
    <div class="container">
        <div class="row">
            <div class="col-md-7 md-margin-bottom-50">
                <h2 class="welcome-title">Welcome to Luqman Traders</h2>
                @*<div class="row margin-bottom-50">
                        <div class="col-sm-4 md-margin-bottom-20">
                            <div class="site-statistics">
                                <span>20,039</span>
                                <small>Products</small>
                            </div>
                        </div>
                        <div class="col-sm-4 md-margin-bottom-20">
                            <div class="site-statistics">
                                <span>54,283</span>
                                <small>Reviews</small>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="site-statistics">
                                <span>376k</span>
                                <small>Sale</small>
                            </div>
                        </div>
                    </div>*@
                <div class="members-number">
                    @*<h3>Join more than <span class="shop-green">13,000</span> members worldwide</h3>*@
                    <div class="map fa fa-border" style="width: 100%; height: 80%">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d849.8725256241456!2d74.31909418835274!3d31.565605432176234!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb0b26eabf577405c!2sLuqman+Traders!5e0!3m2!1sen!2s!4v1481610461629" width="100%" height="250" frameborder="0" style="border: 0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
            <div class="col-md-5">

                @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post, new { @class = "log-reg-block sky-form", id = "sky-form4" }))
                {
                    <h2>Send Us Your Query</h2>
                    <div class="login-input reg-input">
                        <div class="row">
                            <div class="col-sm-12">
                                <section>
                                    <label class="input">
                                        @*<input type="text" name="name" placeholder="Name" class="form-control">*@
                                        @Html.TextBoxFor(x => x.MailModel.Name, new { @class = "form-control", placeholder = "Name" })
                                    </label>
                                </section>
                            </div>
                        </div>
                        <section>
                            <label class="input">
                                @*<input type="email" name="email" placeholder="Email address" class="form-control">*@
                                @Html.TextBoxFor(m => m.MailModel.From, new { @class = "form-control", type = "email", required = "required", placeholder = "Email Address" })
                            </label>
                        </section>
                        <section>
                            <label class="input">
                                @*<textarea type="text" name="username" placeholder="Message" class="form-control"></textarea>*@
                                @Html.TextAreaFor(m => m.MailModel.Body, new { @class = "form-control", required = "required", placeholder = "Message" })
                            </label>
                        </section>
                    </div>
                    <button class="btn-u btn-u-sea-shop btn-block margin-bottom-20" type="submit">Send</button>
                }
            </div>
        </div><!--/end row-->
    </div><!--/end container-->
</div>